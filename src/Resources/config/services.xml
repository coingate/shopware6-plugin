<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="CoinGatePayment\PaymentHandler\CoinGatePaymentHandler">
            <argument type="service" id="CoinGatePayment\Service\ClientApiService"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="router"/>

            <tag name="shopware.payment.method.async"/>
        </service>

        <service id="CoinGatePayment\Service\ClientApiService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="CoinGatePayment\Service\OrderCancelationService">
            <argument type="service" id="CoinGatePayment\Service\ClientApiService"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="state_machine_state.repository"/>
        </service>

        <service id="CoinGatePayment\Subscriber\AccountSubscriber">
            <argument type="service" id="CoinGatePayment\Service\OrderCancelationService"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="CoinGatePayment\Controller\WebhookController">
            <argument type="service" id="CoinGatePayment\Service\ClientApiService"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order_transaction.repository"/>

            <tag name="controller.service_arguments"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

    </services>
</container>
